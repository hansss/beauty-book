-if @appointments
  - @appointments.each do |appointment|
    %tr
      %td.col-md-4
        = appointment.day_of_the_week
        %br
        = appointment.readable_date
      %td.col-md-8
        = appointment.readable_time
        = appointment.appointment_service.service.title + " with "
        = appointment.appointment_service.stylist.full_name
        = link_to "Edit", edit_appointment_path(appointment)
        = link_to "Delete", appointment_path(appointment), method: :delete
        
        

