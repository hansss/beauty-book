.form
  = form_for(@appointment, :html => { :class => "form-horizontal" }) do |f|
    - if @appointment.errors.any?
      #error_explanation
        %h2
          = pluralize(@appointment.errors.count, "error")
          prohibited this appointment from being saved:
        %ul
          - @appointment.errors.full_messages.each do |msg|
            %li= msg
    .field.form-group
      .col-sm-4
        = f.label :date, class: "control-label"
      .col-sm-8
        = f.text_field :date, 'data-behaviour' => 'datepicker', id: "sandbox-container", class: 'form-control'
    .field.form-group
      = f.label :start_time, class: 'control-label'
      = f.time_select :start_time, {minute_step: 15, ampm: true}
    .field.form-group
      = f.hidden_field :appointment_service_id
    = f.submit