.form
  = form_for([@salon, @service]) do |f|
    - if @service.errors.any?
      #error_explanation
        %h2
          = pluralize(@service.errors.count, "error")
          prohibited this service from being saved:
        %ul
          - @service.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :duration
      = f.select :duration, [['0:30',0.5], ['1:00', 1], ['1:30',1.5],['2:00',2],['2:30',2.5],['3:00',3], ['3:30', 3.5], ['4:00',4],['4:30',4.5],['5:00',5],['5:30', 5.5]]
    .field
      = f.label :description
      = f.text_field :description
    .field
      = f.fields_for :stylist_services do |builder|
        = render 'stylist_service_fields', :f => builder
        != link_to_add_fields("Add Stylist", f, :stylist_services)
    = f.submit
        

