%h1 Salon Index
.form.search.form-horizontal
  =search_form_for @q do |f|
    %div.form-group
      = f.label "Salon", class: "form-label"
      = f.text_field :name_cont, class: "form-control"
    %div.form-group
      = f.label "Category", class: "form-label"
      = f.text_field :categories_title_cont, class: "form-control"
    %div.form-group
      = f.submit


.table-responsive
  %table#salon-index.table-hover
    %thead
      %tr
        %th.col-md-2 Salon
        %th.col-md-2 Image
        %th.col-md-2 Info
        %th.col-md-2 View Profile
    %tbody
      = render @salons
  