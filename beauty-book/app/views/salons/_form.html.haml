.form
  =form_for @salon, url: {action: "update"} do |f|
    %div
      - Category.all.each do |category|
        = check_box_tag 'salon[category_ids][]', category.id, checked = @salon.categories.include?(category)
        = category.title
    %div  
      =f.label "Image Uploader"
      =f.fields_for :images do |image|
        = image.file_field :image_file, class: "image-upload-form"
        = image.label "Remove Image"
        = image.check_box :remove_image_file
        %br
    %div
      = f.label :opening_time
      = f.time_select :opening_time, {minute_step: 15, ampm: true}
    %div
      = f.label :closing_time
      = f.time_select :closing_time, {minute_step: 15, ampm: true}
    %div
      = f.label :phone
      = f.text_field :phone
    %div
      = f.label "Website URL"
      = f.text_field :website_url
    %div
      = f.label :address
      = f.text_field :address
    %div
      = f.label :postal_code
      = f.text_field :postal_code
    %div
      = f.label :city
      = f.text_field :city  
    %div
      = f.label :description
      = f.text_area :description, :rows => "5"
      %br
      = f.submit class: "btn btn-success"



