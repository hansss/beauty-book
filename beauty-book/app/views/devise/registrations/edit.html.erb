<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "edit-form pure-form pure-form-aligned"}) do |f| %>
  <%= devise_error_messages! %>
  <fieldset class = "pure-group">
    <%=f.text_field :first_name, placeholder: 'First Name', :class => 'pure-input-1-2', autocomplete: "off"%>
    <%=f.text_field :last_name, placeholder: 'Last Name', :class => 'pure-input-1-2', autocomplete: "off"%>
    <%=f.text_field :cellphone, placeholder: 'Cellphone Number', :class => 'pure-input-1-2', autocomplete: "off"%>
  </fieldset>

  <fieldset class = "pure-group">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => 'pure-input-1-2', autocomplete: "off" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      <% end %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password: Leave blank if change unwanted", :class => 'pure-input-1-2', autocomplete: "off"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", :class => 'pure-input-1-2', autocomplete: "off"%>
  </fieldset>
  <fieldset class = "pure-group">   
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password", :class => 'pure-input-1-2'%>
  </fieldset>
  <%= f.submit "Update", class: 'pure-button pure-button-primary' %>
<% end %>

<h3>Cancel my account</h3>


<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
